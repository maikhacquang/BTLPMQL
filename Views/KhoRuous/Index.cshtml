@model IEnumerable<BTLPMQL.Models.KhoRuou>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 style="color: blueviolet">Số Rượu Còn Trong Kho</h2>
<hr />
<p>
    @Html.ActionLink("Cập Nhật", "Create")
</p>
<table class="table">
    <tr>
        <th width="11%">
            Tên Rượu
        </th>
        <th width="11%">
            Nồng Độ
        </th>
        <th width="11%">
            Tính Chất
        </th>
        <th width="11%">
            Số Lượng
        </th>
        <th width="11%">
            Đơn Vị
        </th>
        <th width="11%">
            Thể Tích
        </th>
        <th width="11%">
            Nguồn Gốc
        </th>
        <th width="11%">
            Đánh Giá
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border: 1px solid #808080; background-color: #ccc;border-style: none;">
            <td>
                @Html.DisplayFor(modelItem => item.TenRuou)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NongDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhChat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonVi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TheTich)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NguonGoc)
            </td>
            <td>
                @Html.Raw(item.DanhGia)
            </td>
            <td style="width: 11%;">
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDRuou }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.IDRuou }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.IDRuou })
            </td>
        </tr>
    }

</table>
