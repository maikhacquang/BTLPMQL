@model BTLPMQL.Models.DanhGia

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 tyle="color: red">Góp Ý</h2>
<hr /> 

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Khách Hàng :</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nhận Xét :</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NhanXet, new { @class = "ckeditor" })
                @Html.ValidationMessageFor(model => model.NhanXet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đóng Góp" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Xem Ý Kiến", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
