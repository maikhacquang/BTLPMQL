@model BTLPMQL.Models.DanhGia

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color: red">Xóa Bình Luận</h2>
<hr />  
<div>
   
    <dl class="dl-horizontal">
        <dt>
           Tên Khách Hàng :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenKhachHang)
        </dd>

        <dt>
           Nhận Xét :
        </dt>

        <dd>
            @Html.Raw(Model.NhanXet)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input style="background-color: red" type="submit" value="Xóa Luôn" class="btn btn-default" /> |
            @Html.ActionLink("Xem Ý Kiến", "Index")
        </div>
    }
</div>
